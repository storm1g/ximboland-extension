{
  "manifest_version": 3,
  "name": "Bimboland Extension",
  "description": "Bimboland Tools",
  "version": "1.0.0",
  "icons": {
    "128": "Bimboland_flag.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://ximbo.land/leaderboards/*"],
      "js": ["leaderboards.js"]
    },
    {
      "matches": ["*://ximbo.land/arcade-station/*"],
      "js":["minigames.js"]
    },
    {
      "matches": ["*://ximbo.land/fight/*", "*://ximbo.land/debate/*"],
      "js":["fights.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["activeTab", "webNavigation", "storage"],

  "host_permissions": ["<all_urls>"],

  "web_accessible_resources": [
    {
      "resources": ["minigame.js", "fight.js"],
      "matches": ["*://ximbo.land/*"]
    }
  ]
}